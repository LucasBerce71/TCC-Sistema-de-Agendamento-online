@model TccNovoGrupo.Models.AdmLogin

@{
    ViewBag.Title = "Cadastro";
}

<center><h2>Seja Bem Vindo Administrador, faça aqui seu cadastro</h2></center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form container">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label style="margin-left: 20px;">Nome:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeAdm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomeAdm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="margin-left: 20px;">Sobrenome:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SobrenomeAdm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SobrenomeAdm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="margin-left: 20px;">Nome de Usuário:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdmUsuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdmUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="margin-left: 20px;">Senha:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdmPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           <label style="margin-left: 20px;">Confirme  a senha digitada acima:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdmConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdmConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <center>
                    <input type="submit" value="Finalizar Cadastro" class="btn btn-outline-success" />
                </center>
            </div>
        </div>
    </div>
}

<link href="~/CSS/estiloGeral.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    hr {
        border: 1px solid #fff;
        height: 2px;
        background-color: #fff;
    }

    h2{
        color: #fff;
    }
</style>