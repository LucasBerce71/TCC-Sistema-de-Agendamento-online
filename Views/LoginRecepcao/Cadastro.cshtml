@model TccNovoGrupo.Models.LoginRecepcao

@{
    ViewBag.Title = "Cadastro";
}

<center><h2>Cadastre-se como Recepcionista</h2></center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form container">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (ViewBag.Message != null)
        {
            <div class="form-group">
                <div class="col-md-10">@ViewBag.Message</div>
            </div>
        }
        <div class="form-group">
            <label>Nome:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeRecepcionista, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomeRecepcionista, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Sobrenome:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SobrenomeRecepcionista, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SobrenomeRecepcionista, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Nome de Usuário:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RecepcionistaUsuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RecepcionistaUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Senha:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RecepcionistaPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RecepcionistaPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           <label>Confirme a senha digitada acima:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RecepcionistaConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RecepcionistaConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <center>
                    <input type="submit" value="Cadastrar Recepcionista" class="btn btn-outline-success" />
                </center>
            </div>
        </div>
    </div>
}

<link href="~/CSS/estiloGeral.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<style>
    hr {
        border: 1px solid #fff;
        height: 2px;
        background-color: #fff;
    }

    h2 {
        color: #fff;
    }
</style>