@model TccNovoGrupo.Models.LoginRecepcao

@{
    ViewBag.Title = "Login";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <center>
        <div class="form container">
            <h2>Entre como Recepcionista</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <label>Nome de Usuário:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RecepcionistaUsuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RecepcionistaUsuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Senha:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RecepcionistaPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RecepcionistaPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Entrar como Recepcionista" class="btn btn-outline-primary" />
                </div>
            </div>
        </div>
    </center>
}

<link href="~/CSS/estiloGeral.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<style>
    hr {
        border: 1px solid #fff;
        height: 2px;
        background-color: #fff;
    }

    h2 {
        color: #fff;
    }
</style>
