                @foreach (var item in ViewBag.dadosAgenda)
                {
                    <option>@item.Servico</option>
                }
            </select><br /><br />
            <label>Selecione o profissional</label><br /><br />
            <select class="form-control" style="width: 500px; height: 30px;">
                @foreach (var item in ViewBag.dadosProfissional)
                {
                    <option>@item.Profissional</option>
                }
            </select><br /><br />
            <p>Início:</p>
            <select class="form-control" style="width: 300px; height: 30px;">
                @foreach (var item in ViewBag.dadosHorario)
                {
                    <option>@item.Inicio</option>
                }
            </select>
            <br />
            <p>Fim:</p>
            <select class="form-control" style="width: 300px; height: 30px;">
                @foreach (var item in ViewBag.dadosHorario)
                {
                    <option>@item.Fim</option>
                }
            </select><br /><br />
            <button type="button" class="btn btn-outline-success" onclick="addServico3()">Novo Serviço</button><br /><br />

        </div>

        <div id="servico3" class="invisivel">
            <hr />
            <label>Selecione um serviço:</label><br /><br />
            <select class="form-control" style="width: 500px; height: 30px;">
                @foreach (var item in ViewBag.dadosAgenda)
                {
                    <option>@item.Servico</option>
                }
            </select><br /><br />
            <label>Selecione o profissional</label><br /><br />
            <select class="form-control" style="width: 500px; height: 30px;">
                @foreach (var item in ViewBag.dadosProfissional)
                {
                    <option>@item.Profissional</option>
                }
            </select><br /><br />
            <p>Início:</p>
            <select class="form-control" style="width: 300px; height: 30px;">
                @foreach (var item in ViewBag.dadosHorario)
                {
                    <option>@item.Inicio</option>
                }
            </select>
            <br />
            <p>Fim:</p>
            <select class="form-control" style="width: 300px; height: 30px;">
                @foreach (var item in ViewBag.dadosHorario)
                {
                    <option>@item.Fim</option>
                }
            </select><br /><br />
            <button type="button" class="btn btn-outline-success" onclick="addServico6()">Novo Serviço</button><br /><br />
            <hr />
        </div>
        <button style="width: 350px; height: 30px;" class="btn btn-primary">Agendar</button><br /><br />


    </form>
</center>

